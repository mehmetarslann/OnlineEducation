            Eposta
            <div class="col-md-10">
                @Html.EditorFor(model => model.ogr_eposta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ogr_eposta, "", new { @class = "text-danger" })
            </div>
