@model OnlineEgitimProjesi.Models.Ogrenciler

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<br />
<br />
<h2>Öğrenci Girişi</h2>

@using (Html.BeginForm("Index","Login",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        Eposta
        <div class="col-md-10">
            @Html.EditorFor(model => model.ogr_eposta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ogr_eposta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Parola
        <div class="col-md-10">
            @Html.EditorFor(model => model.ogr_sifre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ogr_sifre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Giriş Yap" class="btn btn-default" />
            <input type="button" value="Kayıt Ol" class="btn btn-default" onclick="location.href='@Url.Action("OgrenciKayit", "Register")'" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" value="Eğitmen Girişi" class="btn btn-default" onclick="location.href='@Url.Action("EgitmenLogin", "Login")'" />
        </div>
    </div>
</div>
}