@foreach (var item in Model)
{

    <div class="wrap cf">
        <div class="heading cf">
            <h1>Alışveriş Sepeti</h1>
        </div>
        <div class="cart">
            <!--    <ul class="tableHead">
                  <li class="prodHeader">Product</li>
                  <li>Quantity</li>
                  <li>Total</li>
                   <li>Remove</li>
                </ul>-->
            <ul class="cartWrap">
                <li class="items odd">

                    <div class="infoWrap">
                        <div class="cartSection">
                            <iframe width="560" height="315" src="@item.vid_link" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            <p class="itemNumber">@item.vid_ad</p>
                            <h3></h3>

                            <p class="stockStatus"> Stokta</p>
                        </div>


                        <div class="prodTotal cartSection">
                            <p>₺15.00</p>
                        </div>
                        <div class="cartSection removeWrap">
                            <a href="#" class="remove">Kaldx</a>
                        </div>
                    </div>
                </li>

            </ul>
        </div>


        <div class="subtotal cf">
            <ul>
                <li class="totalRow"><span class="label">Toplam Tutar</span><span class="value">₺15.00</span></li>

                <a href="~/Default/Success" class="site-btn buy-btn">Kursu Satın Al</a>
            </ul>
        </div>
    </div>

}