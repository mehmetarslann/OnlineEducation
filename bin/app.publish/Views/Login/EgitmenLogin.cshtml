@model OnlineEgitimProjesi.Models.Egitmenler

@{
    ViewBag.Title = "EgitmenLogin";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<br />

<h2>Eğitmen Girişi</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        Eposta Adresi
        <div class="col-md-10">
            @Html.EditorFor(model => model.egt_eposta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.egt_eposta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Şifre
        <div class="col-md-10">
            @Html.EditorFor(model => model.egt_sifre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.egt_sifre, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Giriş Yap" class="btn btn-default" />
            <input type="button" value="Kayıt Ol" class="btn btn-default" onclick="location.href='@Url.Action("EgitmenKayit", "Register")'" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" value="Öğrenci Girişi" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Login")'" />
        </div>
    </div>
</div>
}
